<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:background="@color/mainActivityBackground">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/camera_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="@dimen/text_horizontal_margin"
            android:layout_marginRight="@dimen/text_horizontal_margin"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/images_number_message_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/small_margin"
                        android:textSize="@dimen/text_size"
                        android:text="@string/images_number_message"
                        android:textStyle="bold"
                        android:textColor="@color/textDarkBackground"
                        />
                    <TextView
                        android:id="@+id/images_number_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:layout_gravity="right"
                        android:textColor="@color/textDarkBackground"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/is_calibrated_message_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/small_margin"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:text="@string/is_calibrated_message"
                        android:textColor="@color/textDarkBackground"/>
                    <TextView
                        android:id="@+id/is_calibrated_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:textSize="@dimen/text_size"
                        android:layout_gravity="right"
                        android:textColor="@color/textDarkBackground"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:padding="@dimen/small_margin"
        android:layout_gravity="right"
        android:orientation="vertical">
        <Button
            android:id="@+id/calibrate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_centerHorizontal="true"
            android:text="@string/calibrate_button_message"
            android:textColor="@color/textDarkBackground"
            android:background="@color/mainActivityButtonColor"
             />
        <Button
            android:id="@+id/compare_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calibrate_button"
            android:layout_centerHorizontal="true"
            android:text="@string/compare_button_message"
            android:textColor="@color/textDarkBackground"
            android:background="@color/mainActivityButtonColor"
             />
        <Button
            android:id="@+id/capture_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/capture_button_height"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/capture_button_message"
            android:textColor="@color/textDarkBackground"
            android:background="@color/mainActivityButtonColor"
            />
        <Button
            android:id="@+id/settings_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/calibrate_button"
            android:layout_alignEnd="@+id/calibrate_button"
            android:text="@string/settings_button_message"
            android:textColor="@color/textDarkBackground"
            android:background="@color/mainActivityButtonColor"
             />
    </RelativeLayout>
</LinearLayout>
